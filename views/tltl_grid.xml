<?xml version="1.0" encoding="UTF-8"?>

<theme>
	<formatVersion>4</formatVersion>
	
<view name="grid">

	<helpsystem name="help">
		<pos ifSubset="Clock:Normal">0.006 1.960</pos>
		<pos ifSubset="Clock:Small">0.0039 1.976</pos>
		<pos ifSubset="Clock:Off">0.0039 1.976</pos>
		<fontSize ifSubset="Clock:Small">0.02</fontSize>
	</helpsystem>
	
      <image name="logo">
         <path>./assets/logos/${system.theme}.png</path>
         <pos>0.08 0.04</pos>
         <maxSize>0.34 0.16</maxSize>
         <origin>0 0</origin>
         <zIndex>4</zIndex>
      </image>

      <image name="md_image">
         <tile>true</tile>
         <pos>0 0</pos>
         <origin>0 0</origin>
         <size>1 1</size>
         <zIndex>0</zIndex>
      </image>
	  
      <image name="art" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./assets/arts/540/$system.jpg</path>
		 <linearSmooth>true</linearSmooth>
         <zIndex>2</zIndex>
      </image>
      <image name="art2" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./assets/filter.png</path>
         <zIndex>5</zIndex>
      </image>
      <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
         <color>A0A0B000</color>
         <fontPath>./_inc/fonts/Homizio.ttf</fontPath>
      </text>
      <text name="md_developer, md_publisher, md_genre, md_players, md_playcount, md_description">
         <color>ffffff00</color>
         <fontPath>./_inc/fonts/Homizio.ttf</fontPath>
      </text>
      <datetime name="md_releasedate, md_lastplayed">
         <color>ffffff00</color>
         <fontPath>./_inc/fonts/Homizio.ttf</fontPath>
      </datetime>
      <rating name="md_rating">
         <pos>0.83 0.94</pos>
         <size>0.05 0.03</size>
         <color>FFFFFF</color>
         <unfilledColor>808080</unfilledColor>
         <fontPath>./_inc/fonts/Homizio.ttf</fontPath>
      </rating>
      <imagegrid name="gamegrid">
         <pos>0.025 0.16</pos>
         <size>0.950 0.774</size>
         <margin>0.005 0.010</margin>
         <padding>0.03 0.05 0.03 0.04</padding>
         <autoLayout>5 2</autoLayout>
         <autoLayoutSelectedZoom>1.12</autoLayoutSelectedZoom>
         <animateSelection>false</animateSelection>
		 <scrollSound ifSubset="InterfaceSound:Type1">./assets/sounds/scroll01.wav</scrollSound>
		 <scrollSound ifSubset="InterfaceSound:Type2">./assets/sounds/scroll.ogg</scrollSound>
      </imagegrid>
      <gridtile name="default">
         <backgroundColor>FFFFFF00</backgroundColor>
         <backgroundCornerSize>9 9</backgroundCornerSize>
         <selectionMode>image</selectionMode>
         <padding>5 5</padding>
         <imageColor>FFFFFFB0</imageColor>
      </gridtile>
      <gridtile name="selected">
         <backgroundCenterColor>0b0102</backgroundCenterColor>
         <backgroundEdgeColor>f60915</backgroundEdgeColor>
         <imageColor>FFFFFFFF</imageColor>
      </gridtile>
      <text name="gridtile">
         <color>D0D0D0</color>
         <backgroundColor>00000000</backgroundColor>
         <fontSize>0.022</fontSize>
         <alignment>center</alignment>
         <size>1 0.24</size>
      </text>
      <text name="gridtile_selected">
         <color>FFFFFF</color>
         <glowColor>00000016</glowColor>
         <glowSize>3</glowSize>
      </text>

	   <text name="md_name">
        <fontPath>./_inc/fonts/Homizio.ttf</fontPath>
      </text>
</view>

</theme>
