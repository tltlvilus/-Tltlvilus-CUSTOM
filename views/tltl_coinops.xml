<?xml version="1.0" encoding="UTF-8"?>

<theme>
	<formatVersion>4</formatVersion>
	
<customView name="TLTL-CoinOps" inherits="grid" tinyScreen="false" displayName="${hcoinopsdViewName}">
	
	<image name="bg_spoofer" extra="true">
		<linearSmooth>true</linearSmooth>
		<size>1 1</size>
		<pos>0 0</pos>
		<path>./assets/bg_tltl_coin.jpg</path>
		<zIndex>1</zIndex>
	</image>
	
	<image name="pointer" extra="true">
		<pos>0.953 0.431</pos>
		<rotation>0</rotation>
		<maxSize>0.15 0.15</maxSize>
		<path>./assets/pointers/default.png</path>
		<path>./assets/pointers/${system.theme}.png</path>
		<zIndex>5</zIndex>
	</image>
	
      <text name="md_name">
         <pos>0.15 0.842</pos>
         <size>0.39 0.05</size>
		 <fontSize>0.036</fontSize>
         <color>FFFFFF</color>
         <glowColor>00000016</glowColor>
         <glowSize>2</glowSize>
         <alignment>left</alignment>
         <fontPath>./_inc/fonts/Circular Std Black.ttf</fontPath>
         <zIndex>36</zIndex>
      </text>

  <text name="md_publisher">
         <pos>0.15 0.84</pos>
         <size>0.22 0.102</size>
         <fontSize>0.020</fontSize>
         <color>539ac8</color>
         <glowColor>00000016</glowColor>
         <glowSize>1</glowSize>
         <fontPath>./_inc/fonts/Circular Std Book.ttf</fontPath>
         <alignment>left</alignment>
    </text>

      <text name="md_description">
         <pos>0.15 0.90</pos>
         <size>0.374 0.078</size>
         <fontSize>0.018</fontSize>
         <color>FFFFFF</color>
		 <glowColor>00000016</glowColor>
         <glowSize>1</glowSize>
		 <lineSpacing>1.26</lineSpacing>
         <alignment>left</alignment>
         <fontPath>./_inc/fonts/Circular Std Book.ttf</fontPath>
      </text>

      <text name="md_lbl_releasedate, md_lbl_developer, md_lbl_genre, md_lbl_players">
         <color>FFFFFF</color>
         <fontPath>./_inc/fonts/Circular Std Book.ttf</fontPath>
         <fontSize>0.018</fontSize>
      </text>
	  <text name="md_developer, md_publisher, md_genre, md_players, md_releasedate">
         <color>cc0e18</color>
         <fontPath>./_inc/fonts/Circular Std Book.ttf</fontPath>
         <fontSize>0.018</fontSize>
      </text>

      <text name="md_lbl_releasedate">
	     <forceUppercase>1</forceUppercase>
         <pos>0.55 0.865</pos>
         <size>0.15 0.018</size>
      </text>
      <datetime name="md_releasedate">
	     <pos>0.65 0.865</pos>
         <size>0.15 0.018</size>
		 <alignment>left</alignment>
      </datetime>

      <text name="md_lbl_players">
	     <forceUppercase>1</forceUppercase>
         <pos>0.55 0.895</pos>
         <size>0.15 0.018</size>
      </text>
      <text name="md_players">
         <pos>0.65 0.895</pos>
         <size>0.038 0.023</size>
         <color>dddddd</color>
		 <fontSize>0.033</fontSize>
         <glowColor>00000040</glowColor>
         <fontPath>./_inc/fonts/players.ttf</fontPath>
      </text>

      <text name="md_lbl_genre">
	     <forceUppercase>1</forceUppercase>
         <pos>0.55 0.925</pos>
         <size>0.15 0.018</size>
      </text>
      <text name="md_genre">
         <pos>0.65 0.925</pos>
         <size>0.17 0.018</size>
      </text>
	  <text name="md_lbl_developer">
	     <forceUppercase>1</forceUppercase>
         <pos>0.55 0.955</pos>
         <size>0.15 0.018</size>
      </text>
      <text name="md_developer">
         <pos>0.65 0.955</pos>
         <size>0.17 0.018</size>
      </text>

      <rating name="md_rating">
         <pos>0.88 0.855</pos>
      </rating>

		<image name="md_flag">
			<origin>0 0.5</origin>
			<pos>0.815 0.965</pos>
			<maxSize>0.01 0.05</maxSize>
			<color>FFFFFFFF</color>
			<zIndex>150</zIndex>
		</image>

		<image name="md_manual,md_nomanual">
			<path>./_inc/icons/book.png</path>
			<pos>0.82 0.875</pos>
			<maxSize>0.02 0.02</maxSize>
			<origin>0.5 0.5</origin>
			<color>666666</color>
			<zIndex>150</zIndex>
		</image>
		<image name="md_nomanual">
			<color>80808040</color>
		</image>

		<image name="md_cheevos,md_notcheevos">
			<origin>0 1</origin>
			<path>./_inc/icons/Contest.png</path>
			<pos>0.814 0.945</pos>
			<maxSize>0.02 0.02</maxSize>
			<color>dddddd</color>
			<zIndex>13</zIndex>
		</image>

		<image name="md_nocheevos" extra="true">
			<origin>0 1</origin>
			<path>./_inc/icons/Contest.png</path>
			<pos>0.814 0.945</pos>
			<maxSize>0.02 0.02</maxSize>
			<color>80808030</color>
			<zIndex>12</zIndex>
		</image>

		<image name="md_savestate,md_nosavestate">
			<origin>0.5 0.5</origin>
			<path>./_inc/icons/SaveState.png</path>
			<pos>0.82 0.905</pos>
			<maxSize>0.02 0.02</maxSize>
			<color>666666</color>
			<zIndex>150</zIndex>
		</image>
		<image name="ghost_savestate" extra="true">
			<origin>0.5 0.5</origin>
			<path>./_inc/icons/SaveState.png</path>
			<pos>0.82 0.905</pos>
			<maxSize>0.02 0.02</maxSize>
			<color>80808040</color>
			<zIndex>12</zIndex>
		</image>		
		<image name="md_nosavestate">
			<color>80808030</color>
		</image>

      <imagegrid name="gamegrid">
         <pos>0.68 0</pos>
         <size>0.3 1</size>
         <scrollDirection>vertical</scrollDirection>
         <autoLayout>1 7</autoLayout>
         <autoLayoutSelectedZoom>1.30</autoLayoutSelectedZoom>
         <margin>0.005 0.010</margin>
         <centerSelection>true</centerSelection>
         <scrollLoop>true</scrollLoop>
		 <imageSource>marquee</imageSource>
		 <scrollSound ifSubset="InterfaceSound:Type1">./assets/sounds/scroll01.wav</scrollSound>
		 <scrollSound ifSubset="InterfaceSound:Type2">./assets/sounds/scroll.ogg</scrollSound>
         <zIndex>8</zIndex>
      </imagegrid>

      <image name="overbar" extra="true">
         <path>./assets/overbar.png</path>
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>9</zIndex>
      </image>

      <image name="overbarx" extra="true">
         <path>./assets/overbarx.png</path>
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>9</zIndex>
      </image>

      <gridtile name="default">
         <padding>64 16</padding>
         <backgroundCenterColor>FFFFFF00</backgroundCenterColor>
         <backgroundEdgeColor>FFFFFF00</backgroundEdgeColor>
         <imageSizeMode>maxSize</imageSizeMode>
         <imageColor>FFFFFFAA</imageColor>
         <reflexion>0.11 0.0</reflexion>
      </gridtile>

      <gridtile name="selected">
         <backgroundCenterColor>FFFFFF00</backgroundCenterColor>
         <backgroundEdgeColor>FFFFFF00</backgroundEdgeColor>
         <padding>64 16</padding>
      </gridtile>

      <text name="gridtile">
         <color>80808080</color>
         <fontSize>0.016</fontSize>
         <size>1 0</size>
      </text>

      <text name="gridtile_selected">
         <color>FFFFFF00</color>
         <fontSize>0.035</fontSize>
         <size>1 0</size>
      </text>

      <image name="screenbg" extra="true">
         <color>000000</color>
         <tile>true</tile>
         <path>./assets/filter3.png</path>
         <pos ifSubset="CoinOpsDefault:Default">0.080 0.250</pos>
         <size ifSubset="CoinOpsDefault:Default">0.370 0.480</size>
		 <pos ifSubset="CoinOpsDefault:TV Only">0.105 0.305</pos>
         <size ifSubset="CoinOpsDefault:TV Only">0.370 0.480</size>
		 <pos ifSubset="CoinOpsDefault:TV Only No Glass">0.105 0.305</pos>
         <size ifSubset="CoinOpsDefault:TV Only No Glass">0.370 0.480</size>
		 <pos ifSubset="CoinOpsDefault:Arcade Only">0.104 0.302</pos>
         <size ifSubset="CoinOpsDefault:Arcade Only">0.368 0.478</size>
		 <pos ifSubset="CoinOpsDefault:Arcade Only No Glass">0.104 0.302</pos>
         <size ifSubset="CoinOpsDefault:Arcade Only No Glass">0.368 0.478</size>
         <zIndex>5</zIndex>
      </image>

     <video name="md_video">
         <pos ifSubset="CoinOpsDefault:Default">0.095 0.272</pos>
         <size ifSubset="CoinOpsDefault:Default">0.340 0.435</size>
		 <pos ifSubset="CoinOpsDefault:TV Only">0.111 0.311</pos>
         <size ifSubset="CoinOpsDefault:TV Only">0.358 0.462</size>
		 <pos ifSubset="CoinOpsDefault:TV Only No Glass">0.111 0.311</pos>
         <size ifSubset="CoinOpsDefault:TV Only No Glass">0.358 0.462</size>
		 <pos ifSubset="CoinOpsDefault:Arcade Only">0.106 0.302</pos>
         <size ifSubset="CoinOpsDefault:Arcade Only">0.362 0.473</size>
		 <pos ifSubset="CoinOpsDefault:Arcade Only No Glass">0.106 0.302</pos>
         <size ifSubset="CoinOpsDefault:Arcade Only No Glass">0.362 0.473</size>
         <origin>0 0</origin>
         <delay>0</delay>
         <showSnapshotNoVideo>true</showSnapshotNoVideo>
         <showSnapshotDelay>false</showSnapshotDelay>
         <zIndex>6</zIndex>
      </video>

	<image name="tv_effect" extra="true">
         <pos ifSubset="CoinOpsDefault:Default">0.080 0.250</pos>
         <size ifSubset="CoinOpsDefault:Default">0.370 0.480</size>
		 <pos ifSubset="CoinOpsDefault:TV Only">0.105 0.305</pos>
         <size ifSubset="CoinOpsDefault:TV Only">0.370 0.480</size>
		 <pos ifSubset="CoinOpsDefault:TV Only No Glass">0.105 0.305</pos>
         <size ifSubset="CoinOpsDefault:TV Only No Glass">0.370 0.480</size>
		 <pos ifSubset="CoinOpsDefault:Arcade Only">0.104 0.302</pos>
         <size ifSubset="CoinOpsDefault:Arcade Only">0.368 0.478</size>
		 <pos ifSubset="CoinOpsDefault:Arcade Only No Glass">0.104 0.302</pos>
         <size ifSubset="CoinOpsDefault:Arcade Only No Glass">0.368 0.478</size>
	</image>
	
      <image name="art" extra="true">
         <zIndex>5</zIndex>
         <pos>-0.50 0</pos>
      </image>

      <image name="art2" extra="true">
         <zIndex>0</zIndex>
      </image>

      <image name="logo">
	  	 <path>./assets/logos/${system.theme}.png</path>
		 <path>./assets/logos/${system.theme}.svg</path>
         <pos>0.865 0.895</pos>
         <size>0.11 0</size>
		 <linearSmooth>true</linearSmooth>
		 <zIndex>15</zIndex>
	  </image>
	  
	<!-- Fan Art -->
	<image name="md_fanart"  extra="true">
		<linearSmooth>true</linearSmooth>
		<size>1 1</size>
		<pos>0 0</pos>
		<origin>0 0</origin>
		<zIndex>1</zIndex>
		<storyboard>
			<animation property="x" from="0.15" to="0.15" begin="0" duration="0" mode="EaseOut" autoreverse="false"/>	
			<animation property="y" from="0" to="0" begin="200" duration="1500" mode="linear" autoreverse="true" repeat="forever"/>
			<animation property="scale" from="1" to="1.1" begin="200" duration="25000" mode="linear" autoreverse="true" repeat="forever"/>
        </storyboard>
	</image>

	<!-- Wallpaper Effect -->
	<image name="crt" extra="true">
      <pos>0 0</pos>
       <size>1 1</size>
       <origin>0 0</origin>
      <path>./effects/scanlines2x.png</path>
      <color>FFFFFF60</color>
      <tile>true</tile>
	  <zIndex>6</zIndex>
    </image>
	
</customView>

</theme>
