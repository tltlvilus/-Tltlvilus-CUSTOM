<?xml version="1.0" encoding="UTF-8"?>

<theme>
	<formatVersion>4</formatVersion>
	
<customView name="TLTL-NO-VIDEO" inherits="gamecarousel" tinyScreen="false" displayName="${tltlcustomnv}">

	<!-- Image Art -->
	<image name="md_image">
        <pos>0.023 0.590</pos>
        <size>0.222 0.37</size>
		<scale>0</scale>
        <origin>0 0</origin>
        <zIndex>0</zIndex>
	</image>
	<image name="md_boxback">
        <pos>0.023 0.590</pos>
        <size>0.222 0.37</size>
        <origin>0 0</origin>
        <zIndex>8</zIndex>
	</image>

	<!-- Fan Art -->
	<image name="md_fanart" extra="true">
		<linearSmooth>true</linearSmooth>
		<size>1 1</size>
		<pos>0 0</pos>
		<origin ifSubset="WheelBG:None">0 0</origin>
		<origin ifSubset="WheelBG:Transparency">0 0</origin>
		<origin ifSubset="WheelBG:Transparency Detail">0 0</origin>
		<origin ifSubset="WheelBG:Transparency White Detail">0 0</origin>
		<origin ifSubset="WheelBG:Black">0.15 0</origin>
		<origin ifSubset="WheelBG:White">0.15 0</origin>
		<origin ifSubset="WheelBG:Gray">0.15 0</origin>
		<origin ifSubset="WheelBG:Gray Dark">0.15 0</origin>
		<origin ifSubset="WheelBG:Gray Light">0.15 0</origin>
		<origin ifSubset="WheelBG:Gray Dark With White">0.15 0</origin>
		<origin ifSubset="WheelBG:Red">0.15 0</origin>
		<origin ifSubset="WheelBG:Green">0.15 0</origin>
		<origin ifSubset="WheelBG:Blue">0.15 0</origin>
		<origin ifSubset="WheelBG:Yellow">0.15 0</origin>
		<origin ifSubset="WheelBG:Rose">0.15 0</origin>
		<origin ifSubset="WheelBG:Pink">0.15 0</origin>
		<origin ifSubset="WheelBG:Purple">0.15 0</origin>
		<origin ifSubset="WheelBG:Lilac">0.15 0</origin>
		<origin ifSubset="WheelBG:Black with Vignette">0.15 0</origin>
		<origin ifSubset="WheelBG:White with Vignette">0.15 0</origin>
		<origin ifSubset="WheelBG:Star">0.15 0</origin>
		<origin ifSubset="WheelBG:Dark">0 0</origin>
		<origin ifSubset="WheelBG:Light">0 0</origin>
		<zIndex>1</zIndex>
		<storyboard>
			<animation property="y" from="0" to="0" begin="200" duration="1500" mode="linear" autoreverse="true" repeat="forever"/>
			<animation property="scale" from="1" to="1.1" begin="200" duration="25000" mode="linear" autoreverse="true" repeat="forever"/>
        </storyboard>
	</image>

	<!-- Wallpaper Effect -->
	<image name="crt" extra="true">
      <pos>0 0</pos>
       <size>1 1</size>
       <origin>0 0</origin>
      <path>./effects/scanlines2x.png</path>
      <color>FFFFFF60</color>
      <tile>true</tile>
	  <zIndex>4</zIndex>
    </image>

</customView>

</theme>
