		<pos>0 0</pos>
		<size>1 1</size>
		<origin>0 0</origin>
		<color>FFFFFFAA</color>
		<logoScale>1.3</logoScale>
		<logoSize>0.2 0.2</logoSize>
		<logoAlignment>right</logoAlignment>
		<maxLogoCount>5</maxLogoCount>
		<defaultTransition>instant</defaultTransition>
		<scrollSound ifSubset="InterfaceSound:Type1">./assets/sounds/scroll01.wav</scrollSound>
		<scrollSound ifSubset="InterfaceSound:Type2">./assets/sounds/scroll01.wav</scrollSound>
		<zIndex>50</zIndex>
	</carousel>

