<view name="screen">

	<!-- Clock -->
	<text name="clock">
		<color>ffffff</color>
		<fontPath>./_inc/fonts/OpenSans-Semibold.ttf</fontPath>
		<glowColor>000000</glowColor>
		<pos ifSubset="Clock:Small">0.914 0.960</pos>
		<pos ifSubset="Clock:Normal">0.893 0.950</pos>
		<pos ifSubset="Clock:Off">0.0039 1.976</pos>
		<size>0.10 0.058</size>
		<scale ifSubset="Clock:Small">0.66</scale>
		<scale ifSubset="Clock:Normal">1</scale>
		<scale ifSubset="Clock:Off">0</scale>
		<glowSize>2</glowSize>
		<verticalAlignment>right</verticalAlignment>
	</text>
	
	<!-- Controller -->
	<controllerActivity name="controllerActivity">
		<pos>0.03 0.025</pos>
		<size>0.085 0.025</size>
		<!--<horizontalAlignment>right</horizontalAlignment>-->
		<itemSpacing>0.003</itemSpacing>
		<imagePath>./../_inc/gamepad.svg</imagePath>
		<gunPath>./../_inc/icons/gun.svg</gunPath>		 
		<color>FFFFFF80</color>
		<activityColor>A0A0FFC0</activityColor>
		<hotkeyColor>FFA0A0C0</hotkeyColor>
	</controllerActivity>
	
</view>	

