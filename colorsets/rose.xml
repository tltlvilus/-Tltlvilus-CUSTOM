<theme>
<formatVersion>4</formatVersion>


<view name="system">
	
	<image name="hue" extra="true">
		<color>FFB6C1</color>
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./../assets/overlayhue.png</path>
         <zIndex>40</zIndex>
      </image>
</view>

<customView name="basic" tinyScreen="false">

	<image name="b_cor" extra="true">
		<size>1 1</size>
		<pos>0 0</pos>
		<origin>0 0</origin>
		<path>./assets/cor_lilas.jpg</path>
		<zIndex>0</zIndex>
		<storyboard>
			<animation property="opacity" from="1" to="0" begin="0" duration="0" mode="linear"/>
			<animation property="opacity" from="0" to="1" begin="500" duration="5000" mode="linear"/>
		</storyboard>
	</image>
	
</customView>

