<view name="gamecarousel">
<image name="logo">
<path>./assets/logos/${system.theme}.png</path>
<path>./assets/logos/${system.theme}.svg</path>
<pos>0.122 0.035</pos>
<size>0.20 0</size>
<alignment>center</alignment>
<zIndex>150</zIndex>
<linearSmooth>true</linearSmooth>
</image>
<image name="console" aspect="true" extra="true"><path>./assets/consoles/${system.theme}.png</path><pos>0.325 0.875</pos><origin>0.5 0.5</origin><maxSize>0.20 .20</maxSize><zIndex>150</zIndex><storyboard><animation property="opacity" from="0" to="0" begin="0" duration="1" mode="linear"/><animation property="opacity" from="0" to="1" begin="0" duration="300" mode="linear"/></storyboard></image></view>

<customView name="TLTL-CoinOps" inherits="grid" tinyScreen="false" displayName="${hcoinopsdViewName}">
